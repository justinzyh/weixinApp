/**index.wxss**/
page { 
  overflow:hidden; 
  position:fixed; 
  background-image:url('https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1561787819790&di=11a985c326b5e72bd2d6f4e3bf99173a&imgtype=0&src=http%3A%2F%2Fpic.uzzf.com%2Fup%2F2012-12%2F20121214115144542640.jpg'); 
  margin: 0px; 
  /*下面的是关键的设置100%显示*/ 
  background-size: 100% 100%; 
} 

.header-container {
  display: flex;
  flex-direction: row;
  height: 200rpx;
  background-color: #fff;
  align-items: center;
  position: relative;
 
}

.header-bg{
  width: 100%;
  height: 100%;
}

/* 名称和头像 */
.userContent{
  position: absolute;
  z-index: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100%;
}

.header-avatar {
  background-color: #fff;
  width: 90rpx;
  height: 90rpx;
  margin: 0 20rpx;
  border-radius: 50%;
}

.header-nickname {
  color: #fff;
  font-size: 30rpx;
}

/* 帐号管理和信息 */
.header-userInfo{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 120rpx;
  margin-left: auto;/*靠右*/
}